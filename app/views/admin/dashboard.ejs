<body>
	
  <%- include('layout/nav') %>
<a class="btn btn-success float-right" href="admin/post/new" role="button" style="margin-right: 100px;">Add New Post</a>
<table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tittle</th>
                <th>Content</th>
                <th>Author</th>
                <th>Create Time</th>
                <th>Update Time</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody> 
            <% if(data.posts){ %>
              <% for(var i=0; i < data.posts.length; i++) { %>
                <tr>  
                    <td><%= data.posts[i].id %></td>
                    <td><%= data.posts[i].title %></td>
                    <td><%= data.posts[i].content %></td>
                      <td><%= data.posts[i].author %></td>
                      <td><%= data.posts[i].created_at %></td>
                      <td><%= data.posts[i].updated_at %></td>
                        <td> <a class="btn btn-primary" href="admin/post/edit/<%=data.posts[i].id%>" role="button">Edit</a> <a class="btn btn-danger post_delete" href="#" role="button" post_id="<%=data.posts[i].id%>">Delete</a></td>
                </tr>

               <% } %>
            <% } %>

        </tbody>  
